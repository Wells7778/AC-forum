<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-sm-3 border p-3 rounded mt-5">
      <h2 style="padding-top: 10px">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "new_form") do |f| %>
        <%= devise_error_messages! %>

        <div class="field form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control bg-light' %>
        </div>

        <div class="field form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control bg-light', id: 'password' %>
        </div>

        <div class="field form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control bg-light' %>
        </div>

        <div class="actions" style="padding: 20px 0;">
          <%= f.submit "Sign up", class: 'btn btn-primary' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
