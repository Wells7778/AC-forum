<div class="container">
  <div class="row">
    <nav class="nav">
      <%= link_to "All", posts_path, class: "nav-link" %>
      <% @categories.each do |category| %>
        <%= link_to category.name, posts_path(category_id: category.id), class: "nav-link" %>
      <% end %>
    </nav>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Replied count</th>
          <th>Title</th>
          <th>replied at</th>
          <th>Viewed count</th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr data-link="<%= post_path(post) %>">
            <td>post.comments_count</td>
            <th><%= post.title %></th>
            <td>post.comments.last.created_at.strftime("%Y-%m-%d") if post.comments.present? </td>
            <td>post.viewed_count</td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="text-center">
      <%= paginate @posts %>
    </div>
  </div>
</div>


<script>
  $("tr[data-link]").click(function() {
    window.location = $(this).data("link")
  })
</script>