<div class="container">
  <div class="row">
    <div class="col-sm-12 mt-3">
      <%= form_for @user do |f| %>
        <div class="form-group">
          <%= f.text_field :name, placeholder: "名稱", class: "form-control bg-light" %>
        </div>
        <div class="form-group">
          <%= f.text_area :description, placeholder: "描述你自己！", class: "form-control bg-light" %>
        </div>
        <div class="form-group">
          <%= image_tag @user.avatar, width: "200px" if @user.avatar? %>
          <%= f.file_field :avatar %>
        </div>
        <div class="form-group">
          <%= f.submit "Submit", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
